{
  "name": "pnpm-workspace-test",
  "private": true,
  "scripts": {
    "commit": "cz",
    "release": "commit-and-tag-version",
    "lint-staged": "lint-staged",
    "lint": "eslint ./",
    "lint:fix": "eslint --fix ./",
    "lint:style": "stylelint --fix ./**/*.{css,scss,vue,html}",
    "clean:type": "rimraf ./dist",
    "type:node": "tsc -p tsconfig.node.json --noEmit --composite false",
    "type:src": "pnpm run clean:type && tsc -p tsconfig.src.json --composite false --declaration --emitDeclarationOnly",
    "dts-mv": "tsx ./scripts/dts-mv.ts",
    "build": "pnpm run lint:fix && pnpm run lint:style && pnpm run type:src && pnpm --filter ./packages/** run build && pnpm run dts-mv",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "devDependencies": {
    "@archoleat/commitlint-define-config": "^1.1.0",
    "@archoleat/prettier-define-config": "^1.1.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@stylistic/stylelint-plugin": "^3.1.1",
    "@types/eslint__js": "^8.42.3",
    "@types/mockjs": "^1.0.10",
    "@types/node": "^22.7.5",
    "@vitejs/plugin-vue": "^5.1.4",
    "commit-and-tag-version": "^12.5.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.2.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.28.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.79.4",
    "stylelint": "^16.9.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-define-config": "^1.6.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.8",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.1.6"
  },
  "version": "1.1.0"
}
